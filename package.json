{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "dom-slot-assign",
	"description": "Tokenize CSS according to the CSS Syntax",
	"type": "module",
	"main": "dist/dom-slot-assign.js",
	"version": "0.1.0",
	"files": [
		"dist"
	],
	"license": "CC0-1.0",
	"author": "Jonathan Neal <jonathantneal@hotmail.com>",
	"bugs": "https://github.com/jsxtools/dom-slot-assign/issues",
	"homepage": "https://github.com/jsxtools/dom-slot-assign",
	"repository": "https://github.com/jsxtools/dom-slot-assign.git",
	"scripts": {
		"build": "rollup --config rollup.config.js"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^8.3.3",
		"@typescript-eslint/eslint-plugin": "5.30.6",
		"@typescript-eslint/parser": "5.30.6",
		"eslint": "8.20.0",
		"eslint-config-dev": "3.1.0",
		"magic-string": "^0.26.2",
		"rollup": "^2.77.0",
		"rollup-plugin-bundle-size": "^1.0.3",
		"rollup-plugin-terser": "7.0.2",
		"terser": "5.14.2",
		"typescript": "4.7.4",
		"vite": "3.0.0"
	},
	"sideEffects": true,
	"types": "dist/dom-slot-assign.d.ts",
	"unpkg": "dist/dom-slot-assign.min.js",
	"jsdelivr": "dist/dom-slot-assign.min.js",
	"eslintConfig": {
		"$schema": "https://json.schemastore.org/eslintrc.json",
		"root": true,
		"extends": [
			"eslint-config-dev"
		],
		"ignorePatterns": "dist",
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"no-undef": "off"
		}
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	}
}
